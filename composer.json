{
    "name": "zeindevs/telebotphp",
    "type": "project",
    "description": "The skeleton application for the PHP Telegram BOT.",
    "keywords": ["PHP", "BOT", "Telegram"],
    "require": {
        "php": "^8.1",
        "longman/telegram-bot": "^0.82.0",
        "vlucas/phpdotenv": "^5.6"
    },
    "license": "Apache-2.0",
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "authors": [
        {
            "name": "zeindevs",
            "email": "zeindevs@gmail.com"
        }
    ],
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
